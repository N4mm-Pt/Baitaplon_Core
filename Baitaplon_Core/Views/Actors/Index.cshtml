@model IEnumerable<Actor>;

@{       ViewData["Title"] = "Danh sách diễn viên";
}

<div class="row">
    <div class="col-md-8 offset-md-2"">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Anh) </th>
                    <th>@Html.DisplayNameFor(model => model.HoTen) </th>
                    <th>@Html.DisplayNameFor(model => model.TieuSu) </th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.Anh" alt="@item.HoTen" style="max-width: 150px;"/>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.TieuSu)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Sửa</a> |
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Chi tiết</a> |
                        <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Xóa</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>