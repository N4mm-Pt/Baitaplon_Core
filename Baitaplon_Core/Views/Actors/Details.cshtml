@model Actor

@{
    ViewData["Title"] = "Chi tiết diễn viên";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Chi tiết về @Model.HoTen</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Anh" class="control-label"></label>
                    <input asp-for="Anh" class="form-control" readonly />
                    <span asp-validation-for="Anh" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoTen" class="control-label"></label>
                    <input asp-for="HoTen" class="form-control" readonly />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TieuSu" class="control-label"></label>
                    <input asp-for="TieuSu" class="form-control" readonly />
                    <span asp-validation-for="TieuSu" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.ActorId">Sửa</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Hiển thị tất cả</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#Anh").val();
        })
    </script>
}