@model IEnumerable<Cinema>;

@{ ViewData["Title"] = "Danh sách rạp phim";
}

<div class="row">
    <div class="col-md-8 offset-md-2" ">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo) </th>
                    <th>@Html.DisplayNameFor(model => model.Ten) </th>
                    <th>@Html.DisplayNameFor(model => model.ChiTiet) </th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Ten" style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Ten)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ChiTiet)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Sửa</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Chi tiết</a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>